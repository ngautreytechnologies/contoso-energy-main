{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Contoso Energy Story Schema",
    "description": "Validation schema for story.json representing the Contoso Energy project portfolio entry.",
    "type": "object",
    "required": [
        "title",
        "summary",
        "problem",
        "solution",
        "tech_stack",
        "overview",
        "architecture",
        "challenges",
        "impact",
        "links",
        "media",
        "timeline",
        "tags",
        "flow"
    ],
    "properties": {
        "title": {
            "type": "string"
        },
        "summary": {
            "type": "string"
        },
        "problem": {
            "type": "string"
        },
        "solution": {
            "type": "string"
        },
        "tech_stack": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "overview": {
            "type": "object",
            "required": [
                "architecture",
                "design_patterns"
            ],
            "properties": {
                "architecture": {
                    "type": "object",
                    "required": [
                        "styles",
                        "key_components"
                    ],
                    "properties": {
                        "styles": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "key_components": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "design_patterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "architecture": {
            "type": "object",
            "required": [
                "style",
                "key_components",
                "diagram_url"
            ],
            "properties": {
                "style": {
                    "type": "string"
                },
                "key_components": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "diagram_url": {
                    "type": "string",
                    "format": "uri"
                }
            }
        },
        "challenges": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "impact": {
            "type": "object",
            "required": [
                "metrics",
                "business_outcome"
            ],
            "properties": {
                "metrics": {
                    "type": "object",
                    "properties": {
                        "processing_time_reduction": {
                            "type": "string"
                        },
                        "cost_savings": {
                            "type": "string"
                        },
                        "transactions_processed": {
                            "type": "string"
                        }
                    }
                },
                "business_outcome": {
                    "type": "string"
                }
            }
        },
        "links": {
            "type": "object",
            "properties": {
                "github": {
                    "type": "string",
                    "format": "uri"
                },
                "demo": {
                    "type": "string",
                    "format": "uri"
                },
                "docs": {
                    "type": "string",
                    "format": "uri"
                }
            }
        },
        "media": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "type",
                    "url"
                ],
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "image",
                            "diagram",
                            "video"
                        ]
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    },
                    "caption": {
                        "type": "string"
                    }
                }
            }
        },
        "timeline": {
            "type": "object",
            "required": [
                "start",
                "end"
            ],
            "properties": {
                "start": {
                    "type": "string",
                    "pattern": "^[0-9]{4}-[0-9]{2}$"
                },
                "end": {
                    "type": "string",
                    "pattern": "^[0-9]{4}-[0-9]{2}$"
                }
            }
        },
        "tags": {
            "type": "array",
            "description": "Hierarchical tags with metadata",
            "items": {
                "type": "object",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "summary": {
                        "type": "string"
                    },
                    "problem": {
                        "type": "string"
                    },
                    "solution": {
                        "type": "string"
                    },
                    "children": {
                        "type": "array",
                        "items": {
                            "$ref": "#/properties/tags/items"
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "flow": {
            "type": "object",
            "required": [
                "steps"
            ],
            "properties": {
                "steps": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "id",
                            "type",
                            "name",
                            "action"
                        ],
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "ingest",
                                    "process",
                                    "enrich",
                                    "persist",
                                    "orchestrate",
                                    "analyze"
                                ]
                            },
                            "name": {
                                "type": "string"
                            },
                            "action": {
                                "type": "string"
                            },
                            "depends_on": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "retries": {
                                "type": "integer",
                                "minimum": 0
                            },
                            "timeout_sec": {
                                "type": "integer",
                                "minimum": 0
                            }
                        }
                    }
                }
            }
        }
    }
}