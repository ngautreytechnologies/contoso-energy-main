{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "./schemas/story.schema.json",
    "title": "Project Story Schema",
    "description": "Schema for portfolio project stories with flow steps, highlights, architecture, and impact.",
    "type": "object",
    "required": [
        "title",
        "summary",
        "solution",
        "tech_stack",
        "flow"
    ],
    "properties": {
        "title": {
            "type": "string",
            "description": "Project title"
        },
        "summary": {
            "type": "string",
            "description": "One-line summary of the project"
        },
        "problem": {
            "type": "string",
            "description": "Problem being solved"
        },
        "solution": {
            "type": "string",
            "description": "High-level solution"
        },
        "highlights": {
            "type": "array",
            "description": "Key highlights of the project",
            "items": {
                "type": "string"
            }
        },
        "tech_stack": {
            "type": "array",
            "description": "Technologies used",
            "items": {
                "type": "string"
            }
        },
        "architecture": {
            "type": "object",
            "properties": {
                "styles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "key_components": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "design_patterns": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "challenges": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "impact": {
            "type": "object",
            "properties": {
                "metrics": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "business_outcome": {
                    "type": "string"
                }
            }
        },
        "links": {
            "type": "object",
            "properties": {
                "github": {
                    "type": "string",
                    "format": "uri"
                },
                "demo": {
                    "type": "string",
                    "format": "uri"
                },
                "docs": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "additionalProperties": false
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "flow": {
            "type": "object",
            "properties": {
                "steps": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "id",
                            "type",
                            "name",
                            "action",
                            "params"
                        ],
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "ingestion",
                                    "microservice",
                                    "sidecar",
                                    "analytics",
                                    "cache",
                                    "documentation",
                                    "code",
                                    "diagram",
                                    "text"
                                ]
                            },
                            "name": {
                                "type": "string"
                            },
                            "action": {
                                "type": "string"
                            },
                            "params": {
                                "type": "object",
                                "properties": {
                                    "code_snippets": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "summary": {
                                                    "type": "string"
                                                },
                                                "language": {
                                                    "type": "string"
                                                },
                                                "content": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "summary",
                                                "language",
                                                "content"
                                            ]
                                        }
                                    },
                                    "diagrams": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "summary": {
                                                    "type": "string"
                                                },
                                                "url": {
                                                    "type": "string",
                                                    "format": "uri"
                                                }
                                            },
                                            "required": [
                                                "summary",
                                                "url"
                                            ]
                                        }
                                    }
                                },
                                "additionalProperties": true
                            },
                            "depends_on": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "retries": {
                                "type": "integer",
                                "minimum": 0
                            },
                            "timeout_sec": {
                                "type": "integer",
                                "minimum": 1
                            }
                        }
                    }
                }
            }
        }
    },
    "additionalProperties": false
}